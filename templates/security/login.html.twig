            <img src="images/loginFoto.svg">
        </div>
        <div class="login-content">
            <form action="index.html">
                <img src="images/fotoProfili.svg">
                <h2 class="title" style = "color:#444444;">MirÃ«sevini</h2>
                <div class="input-div one">
                    <div class="i">
