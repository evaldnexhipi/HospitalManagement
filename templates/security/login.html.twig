{% extends 'Home/homepage.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <!-- Icons font CSS-->
    <link href="vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ asset('css/main.css') }}" rel="stylesheet" media="all">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        i{
            font-family: "Poppins";
        }
    </style>
{% endblock %}

{% block body %}
    <form action ="" method="post">
<div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
    <div class="wrapper wrapper--w680">
        <div class="card card-4">
            <div class="card-body">
                <h2 class="title" style = "text-align: center"><b>Login Form<b/></h2>
                <div class="row row-space">

                    <div class="col-2">
                        <div class="input-group">
                            <label class="label"><i class="fa fa-envelope"></i> Email</label>
                            <input type="text" class="input--style-4" name="email" value="{{ last_username }}">
                        </div>
                    </div>

                    <div class="col-2">
                        <div class="input-group">
                            <label class="label"><i class="fa fa-key" aria-hidden="true"></i>Password</label>
                            <input type="password" class="input--style-4" name="password">
                            <i id="pass-status" class="fa fa-eye" aria-hidden="true" onClick="viewPassword()"></i>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                    </div>
                    <div class="col-2">
                        <button class="btn btn--radius-2 btn--green" type="submit">Logohu</button>
                    </div>
                    <div class="col-2">

                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}
{% block javascripts%}
    <script>
        function viewPassword(){
            var passwordInput = document.getElementsByName('password');
            var passStatus = document.getElementById('pass-status');
            if (passwordInput[0].type == 'password')
            {
                passwordInput[0].type='text';
                passStatus.className='fa fa-eye-slash';
            }
            else
            {
                passwordInput[0].type='password';
                passStatus.className='fa fa-eye';
            }
        }
    </script>
{% endblock %}