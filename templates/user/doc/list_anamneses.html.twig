                <th>Klienti</th>
                <th>Trajtimi</th>
                <th>Diagnoza</th>
                <th>Simptoma</th>
                <th>Vizituar me</th>
            </tr>
            </thead>
            <tbody>
            {% for anamnesis in pagination %}
                <tr>
                    <td>{{ anamnesis.client.user.firstName }} {{ anamnesis.client.user.lastName }} </td>
