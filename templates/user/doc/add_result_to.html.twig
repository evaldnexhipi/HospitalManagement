{% extends 'user/doctorProfile.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
       #forma li{
            color: red;
            list-style-type: circle;
        }
    </style>
{% endblock %}
{% block trupi %}
    <div class="row">
        <div class="col-lg-6 equel-grid">
            <div class="grid">
                <p class="grid-header">Ngarko Rezultat</p>
                <div class="grid-body">
                    {% for message in app.flashes('resultsSuccess') %}
                        <div class="alert alert-success text-center"> {{ message }}</div>
                    {% endfor %}
                    {{ form_start(form) }}
                    <div class="item-wrapper" id="forma">
                        <div class="form-group row showcase_row_area" id="forma">
                            <div class="col-md-3 showcase_text_area">
                                <i class="fa fa-user-o" aria-hidden="true"></i>
                                <label for="results_form_client">Klient</label>
                            </div>
                            <div class="col-md-9 showcase_content_area">
                                <input type="email" id="results_form_client" value="{{ user_email }}" readonly class="form-control">
                            </div>
                        </div>

                        <div class="form-group row showcase_row_area">
                            <div class="col-md-3 showcase_text_area">
                                <i class="fa fa-upload" aria-hidden="true"></i>
                                <label for="results_form_analysisPDF">Ngarko</label>
                            </div>
                            <div class="col-md-9 showcase_content_area">
                                {{ form_row(form.analysisPDF, {'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>

                        <button type="submit" class="btn btn-outline-success">Shto Resultat</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}