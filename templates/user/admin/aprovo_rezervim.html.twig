{% extends 'user/admin/admin_profile.html.twig' %}
{% block trupi %}
    <div class="row">
        <div class="col-lg-6 equel-grid">
            <div class="grid">
                <p class="grid-header">Menaxho Rezervim</p>
                <div class="grid-body">
                    {% for message in app.flashes('aprovoSuccess') %}
                    <div class="alert alert-success"> Rezervimi u aporovua me sukses</div>
                    {% endfor %}
                    {{ form_start(aprovoForm) }}
                    <div class="item-wrapper" id="form2">
                        <div class="form-group row showcase_row_area">
                            <div class="col-md-3 showcase_text_area">
                                <i class="fa fa-user-o" aria-hidden="true"></i>
                                <label for="aprovo_rezervim_form_client">Klient</label>
                            </div>
                            <div class="col-md-9 showcase_content_area">
                                {{ form_row(aprovoForm.client, {'attr':{'class':'custom-select'}}) }}
                            </div>
                        </div>


                        <div class="form-group row showcase_row_area">
                            <div class="col-md-3 showcase_text_area">
                                <i class="fa fa-user-md" aria-hidden="true"></i>
                                <label for="aprovo_rezervim_form_medicalStaff">Doktor</label>
                            </div>
                            <div class="col-md-9 showcase_content_area">
                                {{ form_row(aprovoForm.medicalStaff, {'attr':{'class':'custom-select'}}) }}
                            </div>
                        </div>

                        <div class="form-group row showcase_row_area">
                            <div class="col-md-3 showcase_text_area">
                                <i class="fa fa-stethoscope" aria-hidden="true"></i>
                                <label for="aprovo_rezervim_form_service">Sherbimi</label>
                            </div>
                            <div class="col-md-9 showcase_content_area">
                                {{ form_row(aprovoForm.service, {'attr':{'class':'custom-select'}}) }}
                            </div>
                        </div>

                        <div class="form-group row showcase_row_area">
                            <div class="col-md-3 showcase_text_area">
                                <i class="fa fa-podcast" aria-hidden="true"></i>
                                <label for="aprovo_rezervim_form_status">Status</label>
                            </div>
                            <div class="col-md-9 showcase_content_area">
                                {{ form_row(aprovoForm.status,{'attr':{'class':'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group row showcase_row_area">
                            <div class="col-md-3 showcase_text_area">
                                <i class="fa fa-money" aria-hidden="true"></i>
                                <label for="cost">Kosto</label>
                            </div>
                            <div class="col-md-9 showcase_content_area">
                                <input class="form-control" type="number" id="cost" name="cost" value="{{ cost }}" readonly>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-sm btn-success">Aprovo Pagesen</button>
                        {{ form_end(aprovoForm) }}
                    </div>
                </div>
            </div>
        </div>


        <div class="col-lg-6 equel-grid">
            <div class="grid">
                <div class="grid-body">
                    <img src="https://cdn.dribbble.com/users/148988/screenshots/6683934/pdf.gif"
                    width="430" height="400">
                </div>
            </div>
        </div>
    </div>

    <!--HISTORIKU I REZERVIMEVE -->
    <div class="row">

    </div>
{% endblock %}