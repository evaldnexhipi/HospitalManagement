{% extends 'base.html.twig' %}

{% block title %}Regjistrim{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <title>Regjistrimi</title>
    <link rel="stylesheet" type="text/css" href={{ asset('css/regjistrimCSS.css') }}>
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
{% endblock %}
{% block body %}
    <img class="wave" src={{ asset("images/vala.png") }}>
    <div class="container">
        <div class="img">
            <img src="{{ asset('images/regjistrimFoto.svg') }}">
        </div>
        <div class="login-content">
            <form action="" method="post">
                <h1>Regjistrohu!</h1><br>
                <h3>Ju lutem vendosni sakte kredencialet tuaja!</h3><br>
                <div class="input-div one">
                    <h3>Emër</h3><br>
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <input type="text" class="input" value="emer">
                    </div>
                </div>
                <div class="input-div one">
                    <h3>Mbiemër</h3><br>
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <input type="text" class="input" value="mbiemer">
                    </div>
                </div>

                <div class="input-div one">
                    <h3>Email</h3><br>
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <input type="email" class="input" id = "mbiemer" id = "email">
                    </div>
                </div>

                <div class="input-div one">
                    <h3>Datëlindja</h3><br>
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div>
                        <input type="date" class="input" id = "datelindja">
                    </div>
                </div>

                <div class="input-div one">
                    <h3>Gjinia</h3><br>
                    <div class="i">
                        <i class="fa fa-envelope"></i>
                    </div>
                    <div>
                        <input type="email" class="input" id = "mbiemer" id = "email">
                    </div>
                </div>
                <div class="input-div pass">
                    <h3>Password</h3><br>
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <input type="password" class="input" id = "password">
                    </div>
            </form>
        </div>
        <input type="submit" class="btn" value="Regjistrohu">
    </div>
{% endblock %}